<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="InterfaceAdapter.GUIChatUI"
            prefHeight="400.0" prefWidth="600.0">
    <TextArea fx:id="chatArea" editable="false" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="30.0"/>
    <TextField fx:id="inputField" editable="true" promptText="Type here..." AnchorPane.leftAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="100.0"/>
    <Label text="Press Enter to send" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="5.0"/>
</AnchorPane>
